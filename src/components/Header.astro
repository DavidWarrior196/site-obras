<style>
    .header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100dvw;
        max-width: 100%;
        height: var(--header-height);
        z-index: 100;
    }
    .header__content {
        --max-width: 1400px;
        --min-margin: 50px;
        max-width: calc(var(--max-width) + 2*var(--min-margin));
        width: 100%;
        margin: auto;
        height: var(--header-height);
        padding: 0 var(--min-margin);
        display: flex;
    }
    .header__logo {
        flex: 1;
        display: grid;
        place-items: center;
        height: var(--header-height);
        margin-right: 30px;
    }
    .header__logo_image {
        object-fit: contain;
        object-position: center;
        height: 80px;
    }
    .header__navbar {
        flex: 4;
        display: flex;
        justify-content: center;
        align-content: center;
        flex-wrap: wrap;
        color: white;
    }
    .header__socials {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        height: var(--header-height);
        margin-left: 30px;
    }
    .header__social {
        color: white;
        padding: 4px;
    }
    .header__overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100dvw;
        height: 100dvh;
        background-color: black;
        display: none;
        z-index: -1;
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }
    .header__overlay.active {
        display: block;
        opacity: 0.5;
    }

</style>