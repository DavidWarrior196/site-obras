---
import { Image } from "astro:assets";
import background from "@assets/images/backgrounds/repair-supplies-tools-with-copy-space.jpg"
---

<aside class="cta">
    <div class="cta__background">
        <Image 
            src={background} 
            alt="Ferramentas de reparação" 
            class="cta__background-image"
            data-rellax-speed="-5"
            data-rellax-percentage="0.6"
        />
    </div>
    <div class="cta__content">
        <h4 class="cta__heading light">Peça um Orçamento, sem Compromisso!</h4>
        <form>
            <input 
                type="email"
                name="email"
                placeholder="Insira o seu email"
                class="cta__text-input"
            />
            <input 
                type="submit" 
                value="Enviar" 
                class="cta__submit-button button--primary"
            />
        </form>
    </div>
</aside>

<style>
    .cta {
        position: relative;
        width: 100%;
        height: 400px;
        display: grid;
        place-items: center;
        overflow: hidden;
    }
    .cta__background {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
    }
    .cta__background-image {
        width: 100%;
        height: 140%;
        object-fit: cover;
        object-position: center right;
    }
    .cta__background::after {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        opacity: 0.2;
    }
    .cta__content {
        position: relative;
        max-width: min(600px, calc(100% - 80px));
        display: flex;
        flex-direction: column;
        gap: 30px;
    }
    .cta__text-input {
        padding: 8px 10px;
        max-width: 300px;
        width: 100%;
        font: var(--text-sm);
        color: var(--gray-900);
        border-radius: 5px;
        border: 1px solid black;
        margin-right: 5px;
    }
    .cta__submit-button {
        display: inline-block;
        width: 100px;
        height: 40px;
    }
</style>