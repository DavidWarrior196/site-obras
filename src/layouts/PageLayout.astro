---
import MainLayout from "./MainLayout.astro";
import { Image } from "astro:assets";

const { pageTitle, pageName, background } = Astro.props;
---

<MainLayout pageTitle={pageTitle}>
    <div class="atfold">
        <div class="atfold__background">
            <Image 
                class="atfold__background_image"
                src={background}
                alt="Homens de negócios"
                data-rellax-speed="-5"
            />
        </div>
        <div class="atfold__content">
            <div class="atfold__title">
                <h2>{pageName}</h2>
            </div>
            <div class="atfold__breadcrumb">
                <span>
                    <a href="/">Início</a>
                </span>
                <span>/</span>
                <span>
                    {pageTitle}
                </span>
            </div>
        </div>
    </div>
    <main id="main">
		<slot />
	</main>
</MainLayout>

<script> import "@utils/parallax-effect.js"; </script>